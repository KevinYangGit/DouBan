/* components/indexmodule/indexmodule.wxss */

.module-group {
  padding: 40rpx;
  background-color: #fff;
}

.module-group .module-top {
  font-size: 36rpx;
  display: flex;
  /* 项目沿主轴均匀分布，位于首尾两端的子容器与父容器紧紧挨着 */
  justify-content: space-between;
}

.module-group .module-title {
  color: #494949;
}

.module-group .module-more {
  color: #41be57;
}

.module-scroll-view {
  margin-top: 40rpx;
  width: 100%;
  height: 400rpx;
  /* 设置 scroll-view 不换行 */
  white-space: nowrap;
}
